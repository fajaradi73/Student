<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Activity.RaporAnak"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_rapor"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/deepblue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/ic_logo_background"
                android:id="@+id/tv_semester"
                android:textSize="20sp"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment,UselessParent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_star"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="0dp"
                        android:elevation="5dp"
                        tools:ignore="ContentDescription" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cardView"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/green_600"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="Peringkat"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/peringkat"
                                android:textSize="20sp"
                                android:textColor="@color/yellow_500"
                                android:gravity="center"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Status"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/status_raport"
                        android:textSize="16sp"
                        android:textColor="@color/yellow_500"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kritik dan Saran"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kritik_saran"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Rapor belum diterbitkan oleh walikelas"
                android:gravity="center"
                android:id="@+id/tv_no_rapor"
                android:visibility="gone"
                android:textSize="20sp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/rv_rapor"
                >
            </android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/card"
                android:layout_marginRight="20dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:shrinkColumns="1"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        >

                        <TextView
                            android:layout_weight="1"
                            android:background="@drawable/tabel_ujian"
                            android:padding="13dip"
                            android:text="Detail"
                            android:gravity="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_weight="1"
                            android:background="@drawable/tabel_ujian"
                            android:padding="13dip"
                            android:text="Nilai"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_latihan_teori"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/nilai_teori"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text=""
                            android:gravity="center"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table2"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_ulangan_harian"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/ulangan_harian"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text=""
                            android:gravity="center"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table3"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_latihan_praktikum"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/latihan_praktikum"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text=""
                            android:gravity="center"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table4"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_ekstrakulikuler"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/eskul"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text=""
                            android:gravity="center"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table5"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_ujian_sekolah"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/ujian_sekolah"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table6"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:layout_weight="1"
                            android:text="@string/tv_ujian_negara"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/ujian_negara"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000000" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table7"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:layout_weight="1"
                            android:text="@string/tv_nilai_akhir"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/nilai_akhir"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000000" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/table8"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:layout_weight="1"
                            android:text="@string/tv_rata_rata_kelas"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/rata_rata"
                            android:layout_weight="1"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000000" />
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>