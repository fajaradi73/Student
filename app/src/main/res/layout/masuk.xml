<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Masuk"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_kes"
            android:layout_marginBottom="20dp"
            android:id="@+id/logo"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email"
            android:textColorHint="@color/default_textHint"
            android:layout_width="match_parent"
            android:theme="@style/LoginTextInputLayoutStyle"
            android:layout_height="50dp"
            style="@style/LoginTextInputLayoutStyle"
            android:paddingStart="10dp">

            <EditText
                android:theme="@style/TextLabel"
                android:id="@+id/et_username"
                android:hint="Username"
                android:textSize="16dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edt_bg_selector"
                android:textColor="@color/default_textColor"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />E-mail
        </android.support.design.widget.TextInputLayout>Email

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            app:passwordToggleTint="@color/colorPrimary"
            android:textColorHint="@color/default_textHint"
            app:passwordToggleEnabled="true"
            android:theme="@style/LoginTextInputLayoutStyle"
            app:passwordToggleDrawable="@drawable/show_password_selector"
            android:id="@+id/til_kata_sandi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            style="@style/LoginTextInputLayoutStyle">

            <EditText
                android:theme="@style/TextLabel"
                android:id="@+id/et_kata_sandi"
                android:hint="Kata Sandi"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:background="@drawable/edt_bg_selector"
                android:textColor="@color/default_textColor"

                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />Kata Sandi
        </android.support.design.widget.TextInputLayout>Kata Sandi

        <Button
            android:id="@+id/btn_Masuk"
            android:text="Masuk"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />Button Masuk

    </LinearLayout>---- EditText and Button
    </LinearLayout>