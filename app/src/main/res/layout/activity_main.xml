<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Student.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_kes"
            android:id="@+id/logo"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#b3b2b2"
            android:layout_marginBottom="20dp"
            android:text="Temukan Sekolahmu Disini" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_sekolah"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/default_textHint"
            android:theme="@style/LoginTextInputLayoutStyle"
            style="@style/LoginTextInputLayoutStyle">

            <EditText
                android:id="@+id/et_search_sekolah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edt_bg_selector"
                android:hint="@string/pilih_sekolah_anda"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/default_textColor"
                android:textSize="16dp"
                android:theme="@style/TextLabel" />

        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:id="@+id/rv_sekolah">
        </android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/btn_selanjutnya"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Selanjutnya"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_weight="17"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12dp"
        android:id="@+id/footer"
        android:textColor="#c9c8c8"
        android:gravity="center"
        android:text="Â© 2019 Khronos Education System" />


</LinearLayout>