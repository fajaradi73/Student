<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_for_penilaian"
    tools:context=".Guru.ActivityGuru.PenilaianGuru">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent,ContentDescription">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bs_ic_clear"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_penilaian_icon"
                android:layout_gravity="center"/>
            <com.rey.material.widget.Spinner
                android:id="@+id/sp_tingkatan_kelas"
                style="@style/Material.Widget.Spinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/tab_semester"
                android:gravity="center"
                android:spinnerMode="dropdown"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                app:spn_arrowAnimClockwise="true"
                app:spn_arrowAnimDuration="300"
                app:spn_arrowColor="@color/black"
                app:spn_arrowSwitchMode="true"
                app:spn_dividerColor="@color/black"
                app:spn_dividerHeight="0dp"
                app:spn_labelTextColor="@color/colorPrimary" />

            <com.rey.material.widget.Spinner
                android:id="@+id/sp_mapel"
                style="@style/Material.Widget.Spinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/tab_semester"
                android:gravity="center"
                android:spinnerMode="dropdown"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                app:spn_arrowAnimClockwise="true"
                app:spn_arrowAnimDuration="300"
                app:spn_arrowColor="@color/black"
                app:spn_arrowSwitchMode="true"
                app:spn_dividerColor="@color/black"
                app:spn_dividerHeight="0dp"
                app:spn_labelTextColor="@color/colorPrimary" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lihat nilai latihan dan tugas kelas"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>